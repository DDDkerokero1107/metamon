<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">編集する</h1>
    <%= form_tag("/posts/#{@post.id}/update") do %>
        <div class="form">
            <div class="form-body">
                <% @post.errors.full_messages.each do |message| %>
                    <div class="form-error">
                        <%= message %>
                    </div>
                <% end %>
                <p>講義名</p>
                <textarea name="content"><%= @post.content %></textarea>
                <p>出席の確認方法</p>
                <textarea name = "attend"><%= @post.attend %></textarea>
                <p>試験形式や持ち込み</p>
                <textarea name = "exam"><%= @post.exam %></textarea>
                <p>課題の量</p>
                <textarea name = "homework"><%= @post.homework %></textarea>
                <p>コメント</p>
                <textarea name = "comment"><%= @post.comment %></textarea>
                <input type="submit" value="保存">
            </div>
        </div>
    <% end %>
  </div>
</div>